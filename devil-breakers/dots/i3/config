bindsym F3 exec loc=~/pictures/$(date +%s).png && maim -s $loc && gthumb $loc
bindsym F5 exec loc=~/pictures/$(date +%s).png && maim $loc && gthumb $loc

# Set inner/outer gaps
gaps inner 18
gaps outer 10
